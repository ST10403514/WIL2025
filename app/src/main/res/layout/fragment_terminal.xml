<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundDark"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <!-- Compact Header Controls -->
        <LinearLayout
            android:id="@+id/headerControls"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/tvHeaderTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="🎮 Jump &amp; Move Game! 🌟"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="6dp" />

            <!-- First row of compact buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="4dp">

                <Button
                    android:id="@+id/btnGyroToggle"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="Sensor"
                    android:textSize="11sp"
                    android:background="@drawable/modern_button_primary"
                    android:layout_marginEnd="4dp"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp" />

                <Button
                    android:id="@+id/hideLEDView"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="💡 Lights"
                    android:textSize="11sp"
                    android:background="@drawable/modern_button_secondary"
                    android:layout_marginEnd="4dp"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp" />

                <Button
                    android:id="@+id/btnLogin"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="Login"
                    android:textSize="11sp"
                    android:background="@drawable/modern_button_secondary"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp" />

            </LinearLayout>

            <!-- Second row with switch and auto detection -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="4dp">

                <Switch
                    android:id="@+id/switchMode"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Production"
                    android:textSize="11sp"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp" />

                <Button
                    android:id="@+id/btnToggleAutoDetection"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="Auto: ON"
                    android:textSize="11sp"
                    android:background="@drawable/modern_button_secondary"
                    android:textColor="@color/white"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- ENLARGED Flash Animation Area - Main Feature! -->
        <FrameLayout
            android:id="@+id/movementContainer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:minHeight="300dp"
            android:layout_marginBottom="8dp"
            android:background="@color/backgroundLight"
            android:padding="12dp">

            <TextView
                android:id="@+id/tvMovementHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="✨ Watch Your Moves! ✨"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="8dp" />

            <ImageView
                android:id="@+id/ivMovementFlash"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="16dp"
                android:scaleType="fitCenter"
                android:visibility="gone"
                android:background="#33FFFFFF"
                android:padding="16dp" />

            <!-- Production overlay for movement counts -->
            <TextView
                android:id="@+id/tvProdCounts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|end"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:background="#66000000"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                android:text="L: 0  R: 0  F: 0  B: 0"
                android:visibility="gone" />

        </FrameLayout>

        <!-- Compact Motion Detection Display -->
        <LinearLayout
            android:id="@+id/motionStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@color/backgroundLight"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="🎯 Your Score"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tvCalibrationPrompt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="6dp"
                android:minHeight="36dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvLastMovement"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ready to jump! 🚀"
                android:textColor="@color/colorAccent"
                android:textSize="14sp"
                android:gravity="center"
                android:layout_marginBottom="6dp"
                android:minHeight="36dp" />

            <!-- Movement Counters - More compact and colorful -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="4"
                android:background="#22FFFFFF"
                android:padding="8dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="⬅️"
                        android:textSize="20sp" />
                    <TextView
                        android:id="@+id/tvJumpLeft"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="#FFD700"
                        android:textSize="22sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="➡️"
                        android:textSize="20sp" />
                    <TextView
                        android:id="@+id/tvJumpRight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="#00FF00"
                        android:textSize="22sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="⬆️"
                        android:textSize="20sp" />
                    <TextView
                        android:id="@+id/tvJumpMiddle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="#00BFFF"
                        android:textSize="22sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="⬇️"
                        android:textSize="20sp" />
                    <TextView
                        android:id="@+id/tvJumpBack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="#FF69B4"
                        android:textSize="22sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- Movement Selection Buttons - More kid-friendly -->
        <LinearLayout
            android:id="@+id/movementSelection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="8dp"
            android:weightSum="4">

            <Button
                android:id="@+id/btnJumpLeftSelect"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_margin="3dp"
                android:text="⬅️"
                android:textSize="24sp"
                android:background="@drawable/modern_button_primary"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btnJumpRightSelect"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_margin="3dp"
                android:text="➡️"
                android:textSize="24sp"
                android:background="@drawable/modern_button_primary"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btnJumpUpSelect"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_margin="3dp"
                android:text="⬆️"
                android:textSize="24sp"
                android:background="@drawable/modern_button_primary"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btnJumpFrontSelect"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_margin="3dp"
                android:text="↗️"
                android:textSize="24sp"
                android:background="@drawable/modern_button_primary"
                android:textColor="@color/white" />
        </LinearLayout>


        <!-- LED Options (Hidden by default) - More colorful -->
        <LinearLayout
            android:id="@+id/ledOptions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:visibility="gone"
            android:background="@color/backgroundLight"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="🌈 Choose Your Colors! 🌈"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="4">

                <Button
                    android:id="@+id/btnWhite"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_margin="3dp"
                    android:text="⚪"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/btnRed"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_margin="3dp"
                    android:text="🔴"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/btnGreen"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_margin="3dp"
                    android:text="🟢"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/btnBlue"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_margin="3dp"
                    android:text="🔵"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="4">

                <Button
                    android:id="@+id/btnTopaz"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_margin="3dp"
                    android:text="🟡"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/btnLilac"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_margin="3dp"
                    android:text="🟣"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/btnRainbow"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_margin="3dp"
                    android:text="🌈"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/btnLEDOff"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_margin="3dp"
                    android:text="⚫"
                    android:textSize="20sp" />
            </LinearLayout>

            <Button
                android:id="@+id/btnSeizureMode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="✨ Party Mode ✨"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Communication Section - Compact -->
        <LinearLayout
            android:id="@+id/commSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="120dp"
            android:background="@color/backgroundLight"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="📱 Messages"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="6dp" />

            <TextView
                android:id="@+id/receive_text"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/backgroundDark"
                android:padding="6dp"
                android:textColor="@color/colorRecieveText"
                android:textSize="11sp"
                android:fontFamily="monospace"
                android:scrollbars="vertical" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="6dp">

                <EditText
                    android:id="@+id/send_text"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@color/backgroundDark"
                    android:textColor="@color/white"
                    android:textColorHint="@color/colorHint"
                    android:hint="Type here..."
                    android:textSize="12sp"
                    android:padding="6dp"
                    android:layout_marginEnd="6dp" />

                <Button
                    android:id="@+id/send_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Send"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Hidden elements for backward compatibility -->
        <View
            android:id="@+id/showView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone" />

        <View
            android:id="@+id/hideView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone" />

        <View
            android:id="@+id/buttonsView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/ivJump"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone" />

        <!-- Dummy buttons for backward compatibility -->
        <Button
            android:id="@+id/btnJumpLeft"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone" />

        <Button
            android:id="@+id/btnJumpRight"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone" />

        <Button
            android:id="@+id/btnJumpUp"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone" />

    </LinearLayout>
</ScrollView>